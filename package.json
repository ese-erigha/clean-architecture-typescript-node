{
  "name": "clean-architecture",
  "version": "0.0.0",
  "scripts": {
    "build": "rimraf ./dist && tsc && tsc-alias",
    "start": "npm run build && node dist/server.js",
    "dev": "nodemon",
    "test": "jest --coverage --testTimeout=5000",
    "seed": "node ./scripts/seed-random-notifications.js",
    "lint": "eslint --fix --ignore-path .eslintignore --ext .js,.ts .",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "format": "npm run lint && npm run prettier",
    "prepare": "husky install",
    "pre-commit": "npm run format && npm run test"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "helmet": "^6.0.1",
    "inversify": "^6.0.1",
    "jsend": "^1.1.0",
    "mongodb": "^4.8.0",
    "mongoose": "^6.2.6",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "reflect-metadata": "^0.1.13",
    "swagger-autogen": "^2.20.8",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.8.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.6",
    "@types/jsend": "^1.0.29",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.2",
    "rimraf": "^4.0.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4",
    "husky": "^7.0.0"
  }
}
